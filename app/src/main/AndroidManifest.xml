<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.fiap.comwtcchallenge"> <!-- Pacote raiz do seu projeto -->

    <!-- Permissões necessárias para o Firebase e Notificações -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/> <!-- Para Task 3: Notificações -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Comwtcchallenge"
        tools:targetApi="31">

        <!--
          ACTIVITY CORRIGIDA:
          O 'android:name' como ".MainActivity" informa que a classe
          está na raiz do pacote (br.com.fiap.comwtcchallenge).
        -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Comwtcchallenge">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
          SERVIÇO CORRIGIDO:
          O 'android:name' como ".services.MyFirebaseMessagingService" informa
          que a classe está no sub-pacote 'services'.
        -->
        <service
            android:name=".services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>

